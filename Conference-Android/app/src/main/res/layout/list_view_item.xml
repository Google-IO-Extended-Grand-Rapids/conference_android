<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Wed, May 25"
        android:padding="@dimen/list_view_item_text_padding"
        android:background="@color/purple_light"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/iconBox"
        android:layout_width="@dimen/list_view_item_icon_box_layout_width"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="@dimen/list_view_item_image_layout_width"
            android:layout_height="@dimen/list_view_item_image_layout_height"
            android:id="@+id/iconType"
            android:layout_marginTop="@dimen/list_view_item_image_marginTop"
            android:layout_marginRight="@dimen/list_view_item_image_marginRight"
            android:layout_marginEnd="@dimen/list_view_item_image_marginRight"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:src="@drawable/ic_sessiontype_c"
            android:contentDescription="@string/session_type_indicator" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_view_item_text_marginTop"
            android:layout_marginLeft="@dimen/list_view_item_text_marginLeft"
            android:layout_marginStart="@dimen/list_view_item_text_marginLeft"
            tools:text="Introduction and Keynote"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/list_view_item_text_padding"
            android:layout_marginLeft="@dimen/list_view_item_text_padding"
            android:layout_marginStart="@dimen/list_view_item_text_padding"
            tools:text="9 - 11:30 a.m."
            android:textColor="@color/text_color_light"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginTop="@dimen/list_view_item_text_padding"
            android:layout_marginLeft="@dimen/list_view_item_text_padding"
            android:layout_marginStart="@dimen/list_view_item_text_padding"
            tools:text="Loosemore Auditorium"
            android:textColor="@color/text_color_light"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
